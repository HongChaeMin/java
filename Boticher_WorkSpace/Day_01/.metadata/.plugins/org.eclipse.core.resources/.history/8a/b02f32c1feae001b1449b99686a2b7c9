import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int a = sc.nextInt();
		int r = sc.nextInt();
		int n = sc.nextInt();
		
		int arr[] = new int[10];
		int on = 0;
		for(int i = a; i <= n; i *= r) {
			arr[on] = i;
			on++;
		}
		System.out.println(arr[n - 1]);

	}

}
